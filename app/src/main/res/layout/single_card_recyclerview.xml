<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:elevation="5dp"
        android:id="@+id/single_card_view"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="120dp">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:elevation="5dp"
                            android:background="@color/grey"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_vget_id"
                                android:src="@drawable/cuccamber"
                                android:layout_width="90dp"
                                android:scaleType="fitXY"
                                android:layout_height="120dp"/>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:id="@+id/tv_vget_name_id"
                            android:layout_width="wrap_content"
                            android:text="Cucumber"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">
                            <com.google.android.material.button.MaterialButton
                                android:text="ADD"
                                android:id="@+id/btn_add_id"
                                app:cornerRadius="20dp"
                                android:textColor="@color/white"
                                android:backgroundTint="#55B559"
                                android:layout_width="108dp"
                                android:layout_alignParentRight="true"
                                android:layout_height="44dp"/>
                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <ImageButton
                                    android:id="@+id/btn_sub_id"
                                    android:layout_width="40dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_raduis"
                                    android:src="@drawable/substaction"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:id="@+id/tv_qty_show_id"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:text="00"
                                    android:padding="5dp"
                                    android:background="#C3BFBF"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:layout_height="30dp"/>
                                <ImageButton
                                    android:id="@+id/btn_sum_id"
                                    android:layout_width="40dp"
                                    android:background="@drawable/button_raduis_right"
                                    android:src="@drawable/ic_add"
                                    android:layout_height="30dp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:showDividers="middle"
                        android:divider="@drawable/empty_tall_divider"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="code"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/v_code_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Kg"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/v_qty_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Price"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/v_price_id"
                                android:layout_width="wrap_content"
                                android:text="$10.8"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Total"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/v_total_id"
                                android:layout_width="wrap_content"
                                android:text="$0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>