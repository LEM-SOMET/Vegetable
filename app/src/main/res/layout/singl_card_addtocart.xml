<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:elevation="5dp"
        android:id="@+id/single_card_view_addtocart"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:elevation="5dp"
                            android:background="@color/grey"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_vget_id_addtocart"
                                android:src="@drawable/cuccamber"
                                android:layout_width="90dp"
                                android:scaleType="fitXY"
                                android:layout_height="120dp"/>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/tv_vget_name_id_addtocart"
                            android:layout_width="wrap_content"
                            android:text="Cucumber"
                            android:textSize="22sp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:showDividers="middle"
                        android:divider="@drawable/empty_tall_divider"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="code"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/v_code_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Qty"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/v_qty_id_addtocart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Price"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/v_price_id_addtocart"
                                android:layout_width="wrap_content"
                                android:text="$10.8"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Total"
                                android:textSize="17sp"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/v_total_id_addtocart"
                                android:layout_width="wrap_content"
                                android:text="$0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Space
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>